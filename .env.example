# BlackRoad Docker Manager - Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env files with real credentials!

# =============================================================================
# GitHub
# =============================================================================
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
GITHUB_OWNER=BlackRoad-OS
GITHUB_REPO=blackroad-docker-manager

# =============================================================================
# Cloudflare
# =============================================================================
CLOUDFLARE_API_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
CLOUDFLARE_ACCOUNT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
CLOUDFLARE_API_URL=https://api.cloudflare.com
CLOUDFLARE_WORKER_URL=https://kanban-worker.your-subdomain.workers.dev

# Cloudflare KV Namespace IDs
CLOUDFLARE_KV_KANBAN_STATE=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
CLOUDFLARE_KV_TASK_HASHES=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# Salesforce
# =============================================================================
SALESFORCE_INSTANCE_URL=https://your-instance.salesforce.com
SALESFORCE_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SALESFORCE_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SALESFORCE_REFRESH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# Vercel
# =============================================================================
VERCEL_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxx
VERCEL_TEAM_ID=team_xxxxxxxxxxxxxxxxxxxxxxxx
VERCEL_PROJECT_ID=prj_xxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# DigitalOcean
# =============================================================================
DIGITALOCEAN_TOKEN=dop_v1_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# Anthropic (Claude)
# =============================================================================
ANTHROPIC_API_KEY=sk-ant-api03-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# Raspberry Pi Fleet
# =============================================================================
RPI_MANAGER_URL=http://192.168.1.100:8080
RPI_API_KEY=your-rpi-api-key
RPI_SSH_KEY_PATH=~/.ssh/rpi_ed25519

# Individual Pi nodes (optional)
RPI_NODE1_IP=192.168.1.101
RPI_NODE2_IP=192.168.1.102
RPI_NODE3_IP=192.168.1.103

# =============================================================================
# Development Servers
# =============================================================================
DEV_SERVER_HOST=dev.example.com
DEV_USER=developer
STAGING_SERVER_HOST=staging.example.com
STAGING_USER=deploy
PROD_SERVER_HOST=prod.example.com
PROD_USER=deploy

# =============================================================================
# Webhooks
# =============================================================================
GITHUB_WEBHOOK_SECRET=your-webhook-secret
SALESFORCE_WEBHOOK_SECRET=your-sf-webhook-secret

# =============================================================================
# Optional: Additional Services
# =============================================================================
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/xxx/xxx
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxx/xxx
# DATADOG_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
